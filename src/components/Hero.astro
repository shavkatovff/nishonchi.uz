---
interface Props {
  lang?: string;
}
const { lang = "uz" } = Astro.props;
const isUz = lang === "uz";
---

<section class="relative pt-28 pb-16 lg:pt-36 lg:pb-24 overflow-hidden">
  <!-- Background decorations -->
  <div class="absolute top-20 right-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-0 left-0 w-72 h-72 bg-accent/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute top-40 left-1/4 w-2 h-2 bg-primary/30 rounded-full"></div>
  <div class="absolute top-60 right-1/3 w-3 h-3 bg-accent/30 rounded-full"></div>
  <div class="absolute bottom-20 left-1/3 w-2 h-2 bg-primary/20 rounded-full"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Content -->
      <div class="max-w-xl">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary/10 rounded-full mb-6">
          <span class="w-2 h-2 bg-primary rounded-full animate-pulse"></span>
          <span class="text-xs font-semibold text-primary uppercase tracking-wide">Telegram Ads Targetolog</span>
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight text-dark">
          {isUz ? "Telegram reklamangizni" : "Превращаем рекламу в Telegram"}
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent">
            {isUz ? " pulga aylantiramiz" : " в прибыль"}
          </span>
        </h1>

        <p class="mt-6 text-lg text-text-light leading-relaxed">
          {isUz
            ? "Telegramda reklama yoqish qiyin va qimmatmi? Biz TON va EURO cabinetlar orqali sizning biznesingiz uchun eng samarali reklama strategiyasini yaratamiz."
            : "Реклама в Telegram кажется сложной и дорогой? Мы создадим самую эффективную рекламную стратегию для вашего бизнеса через TON и EURO кабинеты."}
        </p>

        <div class="mt-8 flex flex-col sm:flex-row gap-4">
          <a href="#contact" class="inline-flex items-center justify-center px-8 py-4 bg-primary text-white font-bold rounded-full hover:bg-primary-dark transition-all shadow-lg hover:shadow-xl text-base">
            {isUz ? "Bepul audit olish" : "Бесплатный аудит"}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="https://t.me/nishonchi" target="_blank" rel="noopener" class="inline-flex items-center justify-center px-8 py-4 border-2 border-gray-mid text-text font-semibold rounded-full hover:border-primary hover:text-primary transition-all text-base">
            <svg class="mr-2 w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.479.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
            Telegram
          </a>
        </div>

        <!-- Stats -->
        <div class="mt-12 flex flex-wrap gap-6 sm:gap-10">
          <div class="flex flex-col">
            <span class="text-3xl font-extrabold text-dark">12,500+</span>
            <span class="text-sm text-text-light mt-1">{isUz ? "obunachi yig'ilgan" : "подписчиков привлечено"}</span>
          </div>
          <div class="flex flex-col">
            <span class="text-3xl font-extrabold text-accent">327€</span>
            <span class="text-sm text-text-light mt-1">{isUz ? "sarflangan" : "потрачено"}</span>
          </div>
          <div class="flex flex-col">
            <span class="text-3xl font-extrabold text-dark">6+</span>
            <span class="text-sm text-text-light mt-1">{isUz ? "hamkor mijoz" : "клиентов-партнёров"}</span>
          </div>
        </div>
      </div>

      <!-- Right: Visual -->
      <div class="relative hidden lg:flex items-center justify-center">
        <!-- Main card -->
        <div class="relative w-full max-w-md">
          <div class="bg-gradient-to-br from-primary/10 to-accent/10 rounded-3xl p-8 backdrop-blur-sm border border-white/50">
            <div class="bg-white rounded-2xl shadow-xl p-6">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-primary/10 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                </div>
                <div>
                  <p class="text-xs text-text-light">{isUz ? "Reklama natijalari" : "Результаты рекламы"}</p>
                  <p class="text-sm font-bold text-dark">+12,582 {isUz ? "obunachi" : "подписчиков"}</p>
                </div>
              </div>
              <!-- Mini chart -->
              <div class="flex items-end gap-1.5 h-20">
                <div class="w-full bg-primary/20 rounded-t-sm" style="height: 30%"></div>
                <div class="w-full bg-primary/30 rounded-t-sm" style="height: 45%"></div>
                <div class="w-full bg-primary/40 rounded-t-sm" style="height: 35%"></div>
                <div class="w-full bg-primary/50 rounded-t-sm" style="height: 60%"></div>
                <div class="w-full bg-primary/60 rounded-t-sm" style="height: 55%"></div>
                <div class="w-full bg-primary/70 rounded-t-sm" style="height: 75%"></div>
                <div class="w-full bg-primary rounded-t-sm" style="height: 90%"></div>
                <div class="w-full bg-accent rounded-t-sm" style="height: 100%"></div>
              </div>
            </div>
          </div>

          <!-- Floating card 1 -->
          <div class="absolute -top-4 -right-4 bg-white rounded-2xl shadow-lg p-4 border border-gray-light animate-bounce" style="animation-duration: 3s;">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-light">CTR</p>
                <p class="text-sm font-bold text-dark">1.77%</p>
              </div>
            </div>
          </div>

          <!-- Floating card 2 -->
          <div class="absolute -bottom-4 -left-4 bg-white rounded-2xl shadow-lg p-4 border border-gray-light animate-bounce" style="animation-duration: 4s;">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 bg-accent/10 rounded-lg flex items-center justify-center">
                <span class="text-accent font-bold text-xs">€</span>
              </div>
              <div>
                <p class="text-xs text-text-light">CPA</p>
                <p class="text-sm font-bold text-dark">€0.03</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
