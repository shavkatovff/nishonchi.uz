---
interface Props {
  lang?: string;
}
const { lang = "uz" } = Astro.props;
const isUz = lang === "uz";
---

<footer class="bg-dark text-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-10">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-3">
          <img src="/images/logo-white.png" alt="Nishonchi" class="h-10 w-10" />
          <span class="text-xl font-bold">Nishonchi</span>
        </a>
        <p class="mt-4 text-white/60 text-sm max-w-sm leading-relaxed">
          {isUz
            ? "Telegram reklamangizni pulga aylantiramiz. TON va EURO cabinetlar orqali samarali reklama strategiyasi."
            : "Превращаем рекламу в Telegram в прибыль. Эффективная стратегия через TON и EURO кабинеты."}
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wide text-white/40 mb-4">
          {isUz ? "Sahifa" : "Страница"}
        </h4>
        <nav class="flex flex-col gap-3">
          <a href="#services" class="text-sm text-white/70 hover:text-white transition-colors">
            {isUz ? "Xizmatlar" : "Услуги"}
          </a>
          <a href="#results" class="text-sm text-white/70 hover:text-white transition-colors">
            {isUz ? "Natijalar" : "Результаты"}
          </a>
          <a href="#contact" class="text-sm text-white/70 hover:text-white transition-colors">
            {isUz ? "Bog'lanish" : "Контакт"}
          </a>
        </nav>
      </div>

      <!-- Social -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wide text-white/40 mb-4">
          {isUz ? "Ijtimoiy tarmoqlar" : "Соцсети"}
        </h4>
        <div class="flex flex-col gap-3">
          <a href="https://t.me/nishonchi" target="_blank" rel="noopener" class="flex items-center gap-2 text-sm text-white/70 hover:text-white transition-colors">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
